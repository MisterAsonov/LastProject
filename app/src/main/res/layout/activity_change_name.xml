<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".change_my_name">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change name"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
            app:layout_constraintEnd_toStartOf="@+id/btn_cn_save"
            app:layout_constraintStart_toEndOf="@+id/btn_cn_back"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_cn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@id/toolbar4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".0"
            tools:ignore="TouchTargetSizeCheck" />


        <ImageButton
            android:id="@+id/btn_cn_save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_check_white"
            app:layout_constraintBottom_toBottomOf="@id/toolbar4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/change_name_change"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_text_bg"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Name"

        />

    <EditText
        android:id="@+id/change_password_change"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_text_bg"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/change_name_change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Last name"
        app:layout_constraintVertical_bias="0."
        />

</androidx.constraintlayout.widget.ConstraintLayout>