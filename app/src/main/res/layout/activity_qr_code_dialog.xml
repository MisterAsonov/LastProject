<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#656495"
    android:transitionName="fab_dialog"
    >

    <ImageView
        android:id="@+id/back_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_bg"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0."
        app:layout_constraintHorizontal_bias="0."
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/qr_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qr_code_bg"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <ImageView
        android:id="@+id/qr_code_teqcher"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="@+id/qr_bg"
        app:layout_constraintStart_toStartOf="@+id/qr_bg"
        app:layout_constraintTop_toTopOf="@+id/qr_bg"
        app:layout_constraintBottom_toBottomOf="@+id/qr_bg"
        app:srcCompat="@drawable/ic_launcher_background"
        app:layout_constraintVertical_bias="0.3333"
        app:layout_constraintHorizontal_bias="0.5"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo_qr_code"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/qr_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="-35dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/name_qr_code"
        android:text="Name LastName"
        android:textColor="#90656495"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/qr_bg"
        app:layout_constraintStart_toStartOf="@+id/qr_bg"
        app:layout_constraintTop_toTopOf="@+id/qr_bg"
        app:layout_constraintBottom_toBottomOf="@+id/qr_bg"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <Button
        android:id="@+id/btn_qr_code_ok"
        android:text="Share"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
            android:id="@+id/textView3"
            android:text="Show this QR-Code to your students
                so they can join your group"
            android:textSize="15sp"
        android:textColor="@color/white"
            android:layout_width="314dp"
            android:layout_height="44dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qr_bg"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="50dp"
 />

</androidx.constraintlayout.widget.ConstraintLayout>