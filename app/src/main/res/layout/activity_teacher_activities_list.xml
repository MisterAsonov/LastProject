<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_bg">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/image_of_event_list"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:roundPercent="0.3333"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="15dp"/>

            <TextView
                android:id="@+id/title_of_event_list"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="17sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="24dp"
                android:text="Nonton Bareng Timnos"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.3333"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_of_event_list"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/qwe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_baseline_access_time_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_of_event_list"
                app:layout_constraintTop_toBottomOf="@+id/title_of_event_list" />

            <TextView
                android:id="@+id/date_event_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="20dp"
                android:text="16.03.2020"
                app:layout_constraintBaseline_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/title_of_event_list"
                app:layout_constraintHorizontal_bias="0."
                app:layout_constraintStart_toEndOf="@+id/qwe"
                app:layout_constraintTop_toBottomOf="@+id/title_of_event_list"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/eqw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_baseline_person_outline_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/date_event_list"
                app:layout_constraintTop_toBottomOf="@+id/title_of_event_list"/>

            <TextView
                android:id="@+id/number_of_parcitipance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                app:layout_constraintStart_toEndOf="@+id/eqw"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_of_event_list"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginLeft="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>